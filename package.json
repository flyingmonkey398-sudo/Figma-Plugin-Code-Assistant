{
  "name": "figma-design-scanner",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/code.js --platform=node --format=cjs --target=es2019 --loader:.json=json && esbuild src/ui.ts --bundle --outfile=dist/ui.js --platform=browser --target=es2019 && node -e \"require('fs').cpSync('./src/ui.html','dist/ui.html')\"",
    "watch": "npm run build -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.117.1",
    "esbuild": "^0.21.5",
    "typescript": "^5.9.3"
  }
}
